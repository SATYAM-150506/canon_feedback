<main class="main">
    <div class="container">
        <h1>Canon Feedback Form</h1>

        <form action="/submit_feedback" method="POST" id="feedback-form">
            <input type="text" name="name" placeholder="Your Name" required>
            <input type="email" name="email" placeholder="Your Email" required>
            <input type="date" name="date" required>
            <input type="text" name="product_model" placeholder="Product Model" required>
            <textarea name="comments" placeholder="Your Feedback" required></textarea>

            <label>
                Satisfaction Level:
                <select name="satisfaction" required>
                    <option value="Very Satisfied">Very Satisfied</option>
                    <option value="Satisfied">Satisfied</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Dissatisfied">Dissatisfied</option>
                    <option value="Very Dissatisfied">Very Dissatisfied</option>
                </select>
            </label>

            <!-- Corrected Rating System -->
          <label>Product Rating:</label>
<div class="rating-container">
    <input type="radio" name="rating" value="5" id="star5">
    <label for="star5">★</label>

    <input type="radio" name="rating" value="4" id="star4">
    <label for="star4">★</label>

    <input type="radio" name="rating" value="3" id="star3">
    <label for="star3">★</label>

    <input type="radio" name="rating" value="2" id="star2">
    <label for="star2">★</label>

    <input type="radio" name="rating" value="1" id="star1">
    <label for="star1">★</label>
</div>

            <button type="submit">Submit Feedback</button>
        </form>

        <h2>Feedback Summary</h2>

        <div class="table-container">
            <table id="feedback-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Product Model</th>
                        <th>Feedback</th>
                        <th>Satisfaction</th>
                        <th>Rating</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each feedbacks}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.product_model}}</td>
                        <td>{{this.comments}}</td>
                        <td>{{this.satisfaction}}</td>
                        <td>{{#if this.rating}}{{this.rating}} {{else}}No Rating{{/if}}</td>
                        <td>
                            <a href="/feedback/details/{{this._id}}" class="view-btn">View</a>
                            <form action="/delete_feedback/{{this._id}}" method="POST" style="display:inline;">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</main>